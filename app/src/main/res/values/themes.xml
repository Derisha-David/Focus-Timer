<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pomodoro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender_primary</item>
        <item name="colorPrimaryVariant">@color/lavender_secondary</item>
        <item name="colorOnPrimary">@color/lavender_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lavender_secondary</item>
        <item name="colorSecondaryVariant">@color/lavender_tertiary</item>
        <item name="colorOnSecondary">@color/lavender_text</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/lavender_accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lavender_accent</item>
        <!-- Window background. -->
        <item name="android:windowBackground">@color/lavender_tertiary</item>
        <!-- Action bar colors -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ThemeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/lavender_accent</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>
    
    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
